{
	"info": {
		"_postman_id": "chubank-api-collection",
		"name": "ChuBank API",
		"description": "ChuBank Banking API - Sistema bancário com Clean Architecture",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "chubank"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Generate JWT Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/token",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"token"
							]
						},
						"description": "Gera token JWT para autenticação da API"
					},
					"response": []
				}
			],
			"description": "Endpoints de autenticação"
		},
		{
			"name": "Accounts",
			"item": [
				{
					"name": "Create Account",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"holderName\": \"João Silva\",\n  \"initialBalance\": 1000.00\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/accounts",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"accounts"
							]
						},
						"description": "Cria uma nova conta bancária"
					},
					"response": []
				},
				{
					"name": "Get Account",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/accounts/{{account_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"accounts",
								"{{account_id}}"
							]
						},
						"description": "Busca uma conta pelo ID"
					},
					"response": []
				},
				{
					"name": "Get All Accounts",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/accounts",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"accounts"
							]
						},
						"description": "Busca todas as contas"
					},
					"response": []
				}
			],
			"description": "Gerenciamento de contas bancárias"
		},
		{
			"name": "Transfers",
			"item": [
				{
					"name": "Create Transfer",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"fromAccountId\": \"{{from_account_id}}\",\n  \"toAccountId\": \"{{to_account_id}}\",\n  \"amount\": 100.00,\n  \"description\": \"Transferência de teste\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/transfers",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"transfers"
							]
						},
						"description": "Realiza uma transferência entre contas"
					},
					"response": []
				}
			],
			"description": "Transferências entre contas"
		},
		{
			"name": "Statements",
			"item": [
				{
					"name": "Get Statement",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/statements?accountId={{account_id}}&startDate={{start_date}}&endDate={{end_date}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"statements"
							],
							"query": [
								{
									"key": "accountId",
									"value": "{{account_id}}",
									"description": "ID da conta"
								},
								{
									"key": "startDate",
									"value": "{{start_date}}",
									"description": "Data de início do período (YYYY-MM-DD)"
								},
								{
									"key": "endDate",
									"value": "{{end_date}}",
									"description": "Data de fim do período (YYYY-MM-DD)"
								}
							]
						},
						"description": "Gera extrato de uma conta por período"
					},
					"response": []
				}
			],
			"description": "Extratos de contas"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080/api/v1",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "account_id",
			"value": "00000000-0000-0000-0000-000000000000",
			"type": "string"
		},
		{
			"key": "from_account_id",
			"value": "00000000-0000-0000-0000-000000000000",
			"type": "string"
		},
		{
			"key": "to_account_id",
			"value": "11111111-1111-1111-1111-111111111111",
			"type": "string"
		},
		{
			"key": "start_date",
			"value": "2024-01-01",
			"type": "string"
		},
		{
			"key": "end_date",
			"value": "2024-01-31",
			"type": "string"
		}
	]
}
